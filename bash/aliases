# python

alias pit='ipython'

# git

function gg(){
	git commit -v -a -m "$*"
}

alias ggg='git push && git push heroku master'
alias clone='git clone git://github.com/'
alias gst="git status"
alias ga="git add ."
alias gpu="git push"
alias gpl="git pull"
alias gb="git branch"
alias gd="git diff | mate"

# change directory

alias ..="cd .."

alias box="cd Dropbox"
alias down="cd Download"
alias desk="cd Desktop"

# misc
alias vi="vim"
alias c="clear"
alias la="ls -a"
alias hal="ls -hal"
alias sr="screen -r"

# rails & ruby & mysql

